/**app.wxss**/
view {
  box-sizing: border-box;
}
page{
  background: #7fa0ff;
  height: 100%;
}
.container{
  padding: 0;
  margin: 0;
  height: 100%;
  position: relative;
  z-index: 0;
}
.container_bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}
.content-scroll{
  height: 100%;
  overflow: hidden;
}
.cl{
  clear: both;
}

.red{
  color: #d95940;
}
.blue{
  color: #3399ff;
}
.green{
  color: #19ad19;
}
.golden{
  color: #f4ce2b;
}
.sqbtn{
  display: none;
  width: 272rpx;
  height: 88rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  margin-left: -136rpx;
  margin-top: -44rpx;
  background: transparent;
  border: none
}
.sqbtn::after {
  display: none;
}
.zhygg{
  min-width: 320rpx;
  margin: 30rpx 0;
  padding-top: 56rpx;
  font-size: 26rpx;
  color: #bbb;
  display: none;
  text-align: center;
  background: url(http://xcx.gzzh.co/zhyxcx-gg.png) no-repeat center 0/auto 50rpx;
}
.zhygg view{
  display: none
}
.zhygg text{
  color: #364a79;
}
.adv-bg{
  width: 100%;
  height: auto;
  overflow: hidden;
  text-align: center;
  margin-bottom: 150rpx;
}
.adv-bg .txt-ico{
  width: 640rpx;
  color: #666;
  font-size: 30rpx;
  margin: 0 auto 10rpx;
}
.adv-bg .txt-ico .conten-txt{
  line-height: 30rpx;
  max-width: 74%;
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
}
.adv{
  width: 660rpx;
  height: 250rpx;
  margin:10rpx auto 20rpx;
  
}
.adv image{
  width:100%;
  height: 100%;
}
.fl {
  float: left;
}
.fr {
  float: right;
}
.clearfix:after {
  content: '';
  display: block;
  height: 0;
  overflow: hidden;
  clear: both;
}
.center-block {
  display: block;
  margin: 0 auto;
}
.text-center {
  text-align: center;
}
.share_box {
  position: absolute;
   top: 0;
  left: 0; 
  width: 100%;
  height: 100%;
}
.btn_share {
  display: block;
  width: 100%;
  height: 100%;
  margin:0 auto;
  padding: 0;
  background-color: transparent;
  border: 1px solid transparent;
  outline: none;
  overflow: visible;
  position: relative;
  z-index: 0;
 /* opacity: 0;*/
}
.btn_share::after {
  display: none;
}
.item_bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}
.btn-kf {
  position: absolute;
  display: block;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  opacity: 0;
  z-index: 99;
}
.text_white {
  color: #fff;
}
.text-right {
  text-align: right;
}
.radius_round {
  border-radius: 50%;
}


.overduedark_bg{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.8);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9999;
  display: none; 
}
.overduedark_bg.on{
  display: block;
}
.overduelingth_bg{
  width: 80%;
  height:auto;
  margin:42% auto 0;
  background: #fff;
  text-align: center;
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
}
.overduelingth_bg image{
  width: 130rpx;
  height: 130rpx;
  margin: 40rpx 0;
}
.overduelingth_bg .tit{
  color: #57C774;
  font-size:46rpx;
  padding-top: 30rpx;
}
