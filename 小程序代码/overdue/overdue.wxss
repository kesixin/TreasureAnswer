/* overdue/overdue.wxss */
/* 提交成功弹框 */
.overduedark_bg{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.8);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9999;
  /* display: none; */
}
.overduedark_bg.on{
  display: block;
}
.overduelingth_bg{
  width: 80%;
  height:auto;
  margin:42% auto 0;
  background: #fff;
  text-align: center;
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
}
.overduelingth_bg image{
  width: 130rpx;
  height: 130rpx;
  margin: 40rpx 0;
}
.overduelingth_bg .tit{
  color: #57C774;
  font-size:46rpx;
  padding-top: 30rpx;
}
/* .lingth_bg .tit{
  font-weight: 300;
} */
.overduelingth_bg .content{
  color: #666;
  font-size: 32rpx;
  padding: 30rpx 40rpx;
}
.overduelingth_bg .content>text{
  font-size: 30rpx;
  font-weight: 700rpx;
  color: #333;
}
.overduelingth_bg .ok_btn{
  background: #57C774;
  color: #fff;
  width:74%;
  height:88rpx;
  line-height:100rpx;
  text-align: center;
  margin: 30rpx auto 60rpx;
  border-radius:20rpx;
  /* border-radius:50rpx; */
}