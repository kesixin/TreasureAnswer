.top>image {
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  width: 750rpx;
  height: 354rpx;
  z-index: 0;
}
.top_content {
  position: relative;
  padding-top: 36rpx;
  z-index: 99;
}
.top_content .num {
  position: relative;
  width: 116rpx;
  height: 116rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 60rpx;
  font-weight: bold;
  color: #fff;
  margin: 10px auto;
}
.top_content .num image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  transform: rotate(0deg);
}
.top_content .num image.num_left {
  z-index: 2;
}
.top_content .num image.num_left.on {
  animation: leftrotate 10s infinite linear;
}
@keyframes leftrotate {
  0% {
    transform: rotate(0deg);
  }
  50% {
    transform: rotate(180deg);
  }
  100% {
    transform: rotate(180deg);
  }
}
.top_content .num image.num_right{
  /* display: none; */
  opacity: 0;
  z-index: 4;
}
.top_content .num image.num_right.on {
  animation: rightrotate 10s infinite linear;
}
@keyframes rightrotate {
  0% {
    transform: rotate(0deg);
  }
  49.9% {
    opacity: 0;
  }
  50% {
    opacity: 1;
    transform: rotate(0deg);
  }
  100% {
    opacity: 1;
    transform: rotate(180deg);
  }
}

.top_content .num .num_shadow {
  position: absolute;
  top: 0;
  left: 0;
  width: 50%;
  height: 100%;
  z-index: 3;
  background: #7fa0ff;
}
