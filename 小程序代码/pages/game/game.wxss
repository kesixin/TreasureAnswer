  border-radius: 50%;
}
.num .border {
  position: absolute;
  top: 0;
  left: 0;
  width: 144rpx;
  height: 144rpx;
  box-sizing: border-box;
  border-radius: 50%;
  border: 10rpx solid #fff;
  border-right-color: #333;
  transform: rotate(-45deg);
  animation: rota 1s;
  /* animation-fill-mode: forwards; */
}
@keyframes rota {
  from {
